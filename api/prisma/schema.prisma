// api/prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int      @id @default(autoincrement())
  name         String
  email        String   @unique
  passwordHash String?
  googleId     String?
  avatarUrl    String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  boards   Board[]
  comments Comment[] // Un utilisateur peut écrire plusieurs commentaires
}

model Board {
  id        Int      @id @default(autoincrement())
  title     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   User @relation(fields: [userId], references: [id])
  userId Int

  lists  List[]
  labels Label[] // Un board possède un ensemble d'étiquettes
}

model List {
  id        Int      @id @default(autoincrement())
  title     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  board   Board @relation(fields: [boardId], references: [id], onDelete: Cascade)
  boardId Int

  cards Card[]
}

model Card {
  id        Int      @id @default(autoincrement())
  title     String
  content   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  list   List @relation(fields: [listId], references: [id], onDelete: Cascade)
  listId Int

  comments Comment[] // Une carte peut avoir plusieurs commentaires
  labels   Label[]   // Une carte peut avoir plusieurs étiquettes
}

// NOUVEAU MODÈLE : Commentaire
model Comment {
  id        Int      @id @default(autoincrement())
  text      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  card   Card @relation(fields: [cardId], references: [id], onDelete: Cascade)
  cardId Int

  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId Int
}

// NOUVEAU MODÈLE : Étiquette
model Label {
  id        Int      @id @default(autoincrement())
  name      String
  color     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  board   Board @relation(fields: [boardId], references: [id], onDelete: Cascade)
  boardId Int

  cards Card[] // Une étiquette peut être sur plusieurs cartes
}
